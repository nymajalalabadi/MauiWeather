<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiWeather.MVVM.Views.WeatherView"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             Title="WeatherView">

    <Grid Margin="15" RowDefinitions=".08*, .1*, .5*, .1*, .3*">

        <Grid Grid.Row="0">
            
            <Frame />
            
            <SearchBar Placeholder="Search for a city" VerticalOptions="Center" />

        </Grid>

        <VerticalStackLayout Grid.Row="1" Style="{StaticResource MainStackLayout}">

            <Label Text="Paris" Style="{StaticResource Title}"/>
            <Label Text="July 08,2025" Style="{StaticResource WeatherTitle}"/>

        </VerticalStackLayout>

        <skia:SKLottieView Grid.Row="2" RepeatCount="-1" Source="storm.json">
            
        </skia:SKLottieView>

    </Grid>
    
</ContentPage>